<h1><%= @title %></h1>
<%= form_for(:session, :url => sessions_path) do |f| %> 
	<div class="field">
		<%= f.label :email %><br />
		<%= f.text_field :email %> 
	</div>
	<div class="field">
		<%= f.label :password %><br /> 
		<%= f.password_field :password %>
	</div>
	<%= f.submit "Login" %>
<% end %>
<p>New user? <%= link_to "Sign up now!", signup_path %></p>